<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.ac.aut.bluetooth.MainActivity">

    <Button
        android:id="@+id/buttonTurnOnBluetooth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="16dp"
        android:onClick="turnOnBluetooth"
        android:text="Turn on Bluetooth"
        app:layout_constraintBottom_toTopOf="@+id/buttonTurnOffBluetooth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonSetDeviceVisible"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonSetDeviceVisible"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:onClick="setDeviceVisible"
        android:text="Set Device visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonListPairedDevice"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonTurnOffBluetooth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="turnOffBluetooth"
        android:text="Turn off bluetooth"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonListPairedDevice"
        app:layout_constraintLeft_toLeftOf="@+id/buttonTurnOnBluetooth"
        app:layout_constraintRight_toRightOf="@+id/buttonTurnOnBluetooth"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonListPairedDevice"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="61dp"
        android:onClick="listPairedDevice"
        android:text="List Paired device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/buttonSetDeviceVisible"
        app:layout_constraintRight_toRightOf="@+id/buttonSetDeviceVisible"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textViewPairedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired Devices:"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonTurnOnBluetooth"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPairedDevice"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
